<%- include("./partials/header") %>

<div class="row">
    <div class="col-md-12">
        <form class="form-signin" action="/login" method="POST">
            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            <label for="signinUsername" class="sr-only">Username</label>
            <input id="signinUsername" class="form-control" type="text" name="username" placeholder="username" required autofocus>
            <label for="signinPassword" class="sr-only">Password</label>
            <input id="signinPassword" class="form-control" type="password" name="password" placeholder="password" required>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        </form>
        <div class="form-signin">
            <a href="/campgrounds">Go Back</a>
        </div> 
    </div>
</div>

<%- include("./partials/footer") %>